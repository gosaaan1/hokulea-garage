{
 // デフォルトで`"terminal.integrated.profiles.linux"`の`"bash"`をターミナルで起動させる。
    "terminal.integrated.defaultProfile.linux": "bash",
    // シェルのプロファイル名に対して`"path"`で実行するシェルのパスを指定し、`"args"`で起動時の引数を指定する。
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash"
        }
    }
}